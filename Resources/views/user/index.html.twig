{% extends "LeooUserBundle::layout.html.twig" %}
{% block body %}
    <h1>User list Admin</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in my_pager %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{user.username}}</td>
                <td>{{user.email}}</td>

                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                        <li>
                            {% if user.enabled == false %}
                                <a href="{{ path('user_enable', { 'id': user.id }) }}">activer</a>
                            {% else %}
                                <a href="{{ path('user_disable', { 'id': user.id }) }}">DÃ©sactiver</a>
                            {% endif %}
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="pagerfanta">
        {{ pagerfanta(my_pager) }}
    </div>

    <ul>
        <li>
            <a href="{{ path('user_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
